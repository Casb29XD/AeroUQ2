<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<VBox prefHeight="500.0" prefWidth="800.0" spacing="15" style="-fx-background-color: linear-gradient(to bottom, #e6f5e9, #d4ebd7);" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.EmpleadoController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    
    <!-- Título con efecto de sombra -->
    <HBox alignment="CENTER" style="-fx-background-color: #2e8b57; -fx-background-radius: 10;">
        <padding>
            <Insets bottom="10" left="15" right="15" top="10" />
        </padding>
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="🛠️ Gestión de Empleados">
            <effect>
                <DropShadow>
                    <color>
                        <Color opacity="0.3" />
                    </color>
                </DropShadow>
            </effect>
        </Label>
        <effect>
            <DropShadow />
        </effect>
    </HBox>
    
    <!-- Espacio después del título -->
    <HBox prefHeight="10.0" />
    
    <!-- Barra de búsqueda -->
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 10;">
        <Label text="Buscar Empleado:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtBuscar" promptText="Ingrese ID o nombre de empleado" HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnBuscar" text="🔍 Buscar" onAction="#handleBuscarEmpleado" 
                style="-fx-background-color: #2e8b57; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;">
            <padding>
                <Insets bottom="8" left="15" right="15" top="8" />
            </padding>  
        </Button>
        <Button fx:id="btnLimpiarBusqueda" text="❌ Limpiar" onAction="#handleLimpiarBusqueda" 
                style="-fx-background-color: #78a885; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;">
            <padding>
                <Insets bottom="8" left="15" right="15" top="8" />
            </padding>
        </Button>
        <effect>
            <DropShadow>
                <color>
                    <Color opacity="0.2" />
                </color>
            </DropShadow>
        </effect>
    </HBox>
    
    <!-- TableView redimensionable -->
    <TableView fx:id="tableEmpleado" VBox.vgrow="ALWAYS" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #a3d2a3;">
        <columns>
            <TableColumn fx:id="colIdEmpleado" prefWidth="100" style="-fx-alignment: CENTER;" text="ID Empleado" />
            <TableColumn fx:id="colNombre" prefWidth="150" text="Nombre Empleado" />
            <TableColumn fx:id="colApellido" prefWidth="150" text="Apellido Empleado" />
            <TableColumn fx:id="colCargo" prefWidth="150" text="Cargo Empleado" />

        </columns>
        <columnResizePolicy>
            <TableView fx:constant="UNCONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <effect>
            <DropShadow>
                <color>
                    <Color opacity="0.2" />
                </color>
            </DropShadow>
        </effect>
    </TableView>
    
    <!-- Panel de botones -->
    <HBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>
        <Button fx:id="btnAdd" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleAddEmpleado" style="-fx-background-color: #3cb371; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Agregar Empleado ➕">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <effect>
                <DropShadow height="5.0" radius="2.0" width="5.0">
                    <color>
                        <Color opacity="0.3" />
                    </color>
                </DropShadow>
            </effect>
        </Button>
        <Button fx:id="btnEdit" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleEditEmpleado" style="-fx-background-color: #20b2aa; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Editar Empleado ✏">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <effect>
                <DropShadow height="5.0" radius="2.0" width="5.0">
                    <color>
                        <Color opacity="0.3" />
                    </color>
                </DropShadow>
            </effect>
        </Button>
        <Button fx:id="btnDelete" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleDeleteEmpleado" style="-fx-background-color: #db5a42; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Eliminar Empleado ➖">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <effect>
                <DropShadow height="5.0" radius="2.0" width="5.0">
                    <color>
                        <Color opacity="0.3" />
                    </color>
                </DropShadow>
            </effect>
        </Button>
        <effect>
            <DropShadow>
                <color>
                    <Color opacity="0.2" />
                </color>
            </DropShadow>
        </effect>
    </HBox>
</VBox>