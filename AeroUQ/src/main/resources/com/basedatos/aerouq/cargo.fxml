<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<fx:root prefHeight="500.0" prefWidth="800.0" spacing="15" style="-fx-background-color: linear-gradient(to bottom, #e6f5e9, #d4ebd7);" type="VBox" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.basedatos.aerouq.controller.cargoController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- TÃ­tulo con efecto de sombra -->
    <HBox alignment="CENTER" style="-fx-background-color: #2e8b57; -fx-background-radius: 10;">
        <padding>
            <Insets bottom="10" left="15" right="15" top="10" />
        </padding>
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="ðŸ“¦ Cargo">
            <effect>
                <DropShadow>
                    <color>
                        <Color opacity="0.3" />
                    </color>
                </DropShadow>
            </effect>
        </Label>
        <effect>
            <DropShadow />
        </effect>
    </HBox>

    <!-- Espacio despuÃ©s del tÃ­tulo -->
    <HBox prefHeight="10.0" />

    <!-- Nuevos campos de entrada -->
    <HBox alignment="CENTER" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 10;">
        <Label style="-fx-font-weight: bold;" text="Nombre:" />
        <TextField fx:id="txtNombre" promptText="Ej: piloto" />
        <Label style="-fx-font-weight: bold;" text="DescripciÃ³n:" />
        <TextField fx:id="txtDescripcion" promptText="Ej: conductor de aviones" />
    </HBox>

    <!-- Barra de bÃºsqueda -->
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 10;">
        <Label style="-fx-font-weight: bold;" text="Buscar cargo:" />
        <TextField fx:id="txtBuscar" promptText="Ingrese ID" HBox.hgrow="ALWAYS" />
        <Button fx:id="btnBuscar" onAction="#handleBuscarCarga" style="-fx-background-color: #2e8b57; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="ðŸ” Buscar">
            <padding>
                <Insets bottom="8" left="15" right="15" top="8" />
            </padding>
        </Button>
        <Button fx:id="btnLimpiarBusqueda" onAction="#handleLimpiarBusqueda" style="-fx-background-color: #78a885; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="âŒ Limpiar">
            <padding>
                <Insets bottom="8" left="15" right="15" top="8" />
            </padding>
        </Button>
        <effect>
            <DropShadow>
                <color>
                    <Color opacity="0.2" />
                </color>
            </DropShadow>
        </effect>
    </HBox>

    <!-- Panel de botones (movido arriba de la tabla) -->
    <HBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>
        <Button fx:id="btnAdd" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleAddCarga" style="-fx-background-color: #3cb371; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Agregar Cargo âž•">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <effect>
                <DropShadow height="5.0" radius="2.0" width="5.0">
                    <color>
                        <Color opacity="0.3" />
                    </color>
                </DropShadow>
            </effect>
        </Button>
        <Button fx:id="btnEdit" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleEditCarga" style="-fx-background-color: #20b2aa; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Editar Cargo âœ">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <effect>
                <DropShadow height="5.0" radius="2.0" width="5.0">
                    <color>
                        <Color opacity="0.3" />
                    </color>
                </DropShadow>
            </effect>
        </Button>
        <Button fx:id="btnDelete" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleDeleteCarga" style="-fx-background-color: #db5a42; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Eliminar Cargo âž–">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <effect>
                <DropShadow height="5.0" radius="2.0" width="5.0">
                    <color>
                        <Color opacity="0.3" />
                    </color>
                </DropShadow>
            </effect>
        </Button>
        <effect>
            <DropShadow>
                <color>
                    <Color opacity="0.2" />
                </color>
            </DropShadow>
        </effect>
    </HBox>

    <!-- TableView redimensionable -->
    <TableView fx:id="tableCargas" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #a3d2a3;" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colIDCargo" prefWidth="100" style="-fx-alignment: CENTER;" text="ID Cargo" />
            <TableColumn fx:id="colNombre" prefWidth="205.0" text="Nombre" />
            <TableColumn fx:id="colDescripcion" prefWidth="273.0" text="Descripcion" />
            <TableColumn fx:id="colFechaCreacion" prefWidth="180.0" text="Fecha de Creacion" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="UNCONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <effect>
            <DropShadow>
                <color>
                    <Color opacity="0.2" />
                </color>
            </DropShadow>
        </effect>
    </TableView>

</fx:root>
