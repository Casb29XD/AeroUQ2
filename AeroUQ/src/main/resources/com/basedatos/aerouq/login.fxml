<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.basedatos.aerouq.controller.LoginController"
      alignment="CENTER" spacing="20"
      style="-fx-background-color: #1b5e20; -fx-padding: 100 50 100 50;"> <!-- top, right, bottom, left -->

    <Label text="Inicio de Sesión"
           style="-fx-font-size: 28px; -fx-text-fill: white;" />

    <TextField fx:id="txtUsuario" promptText="Usuario"
               style="-fx-font-size: 16px;
                      -fx-pref-height: 45px;
                      -fx-pref-width: 300px;
                      -fx-background-color: white;
                      -fx-border-radius: 10;
                      -fx-background-radius: 10;
                      -fx-text-fill: black;
                      -fx-padding: 0 10 0 10;" />

    <PasswordField fx:id="txtContrasena" promptText="Contraseña"
                   style="-fx-font-size: 16px;
                          -fx-pref-height: 45px;
                          -fx-pref-width: 300px;
                          -fx-background-color: white;
                          -fx-border-radius: 10;
                          -fx-background-radius: 10;
                          -fx-text-fill: black;
                          -fx-padding: 0 10 0 10;" />

    <Button text="Iniciar Sesión"
            onAction="#handleLogin"
            style="-fx-background-color: white;
                   -fx-text-fill: #1b5e20;
                   -fx-font-size: 18px;
                   -fx-pref-width: 300px;
                   -fx-pref-height: 45px;
                   -fx-font-weight: bold;
                   -fx-background-radius: 10;" />

    <Label fx:id="lblError" textFill="red" visible="false"
           style="-fx-font-size: 14px;" />
</VBox>
