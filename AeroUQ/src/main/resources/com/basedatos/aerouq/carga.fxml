<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<VBox prefHeight="500.0" prefWidth="800.0" spacing="15" style="-fx-background-color: linear-gradient(to bottom, #e6f5e9, #d4ebd7);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.basedatos.aerouq.controller.CargaController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- TÃ­tulo con efecto de sombra -->
    <HBox alignment="CENTER" style="-fx-background-color: #2e8b57; -fx-background-radius: 10;">
        <padding>
            <Insets bottom="10" left="15" right="15" top="10" />
        </padding>
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="ðŸ“¦ GestiÃ³n de Carga y LogÃ­stica">
            <effect>
                <DropShadow>
                    <color>
                        <Color opacity="0.3" />
                    </color>
                </DropShadow>
            </effect>
        </Label>
        <effect>
            <DropShadow />
        </effect>
    </HBox>

    <!-- Espacio despuÃ©s del tÃ­tulo -->
    <HBox prefHeight="10.0" />

    <!-- Barra de bÃºsqueda -->
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 10;">
        <Label style="-fx-font-weight: bold;" text="Buscar carga:" />
        <TextField fx:id="txtBuscar" promptText="Ingrese ID o tipo de carga" HBox.hgrow="ALWAYS" />
        <Button fx:id="btnBuscar" onAction="#handleBuscarCarga" style="-fx-background-color: #2e8b57; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="ðŸ” Buscar">
            <padding>
                <Insets bottom="8" left="15" right="15" top="8" />
            </padding>
        </Button>
        <Button fx:id="btnLimpiarBusqueda" onAction="#handleLimpiarBusqueda" style="-fx-background-color: #78a885; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="âŒ Limpiar">
            <padding>
                <Insets bottom="8" left="15" right="15" top="8" />
            </padding>
        </Button>
        <effect>
            <DropShadow>
                <color>
                    <Color opacity="0.2" />
                </color>
            </DropShadow>
        </effect>
    </HBox>

    <!-- FORMULARIO DE CAMPOS CON DOS COLUMNAS -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;">
        <!-- Primera fila: ID AerolÃ­nea y Peso -->
        <HBox spacing="20">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-weight: bold;" text="ID AerolÃ­nea:" />
                <TextField fx:id="txtIdAerolinea" promptText="ID AerolÃ­nea" />
            </VBox>
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-weight: bold;" text="Peso:" />
                <TextField fx:id="txtPeso" promptText="Peso" />
            </VBox>
        </HBox>
        <!-- Segunda fila: Tipo de Carga y Estado (ComboBox) -->
        <HBox spacing="20">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-weight: bold;" text="Tipo de Carga:" />
                <ComboBox fx:id="comboTipoCarga" promptText="Seleccione tipo de carga" />
            </VBox>
            <VBox maxWidth="300" spacing="5" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-weight: bold;" text="Estado:" />
                <ComboBox fx:id="comboEstado" promptText="Seleccione estado" />
            </VBox>
        </HBox>
    </VBox>

    <!-- Panel de botones -->
    <HBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>
        <Button fx:id="btnAdd" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleAddCarga" style="-fx-background-color: #3cb371; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Agregar Carga âž•">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <effect>
                <DropShadow height="5.0" radius="2.0" width="5.0">
                    <color>
                        <Color opacity="0.3" />
                    </color>
                </DropShadow>
            </effect>
        </Button>
        <Button fx:id="btnEdit" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleEditCarga" style="-fx-background-color: #20b2aa; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Editar Carga âœ">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <effect>
                <DropShadow height="5.0" radius="2.0" width="5.0">
                    <color>
                        <Color opacity="0.3" />
                    </color>
                </DropShadow>
            </effect>
        </Button>
        <Button fx:id="btnDelete" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleDeleteCarga" style="-fx-background-color: #db5a42; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Eliminar Carga âž–">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <effect>
                <DropShadow height="5.0" radius="2.0" width="5.0">
                    <color>
                        <Color opacity="0.3" />
                    </color>
                </DropShadow>
            </effect>
        </Button>
        <effect>
            <DropShadow>
                <color>
                    <Color opacity="0.2" />
                </color>
            </DropShadow>
        </effect>
    </HBox>

    <!-- TableView redimensionable -->
    <TableView fx:id="tableCargas" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #a3d2a3;" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colIdCarga" prefWidth="100" style="-fx-alignment: CENTER;" text="ID Carga" />
            <TableColumn fx:id="colNIdAerolinea" prefWidth="150" text="ID AerolÃ­nea" />
            <TableColumn fx:id="colPeso" prefWidth="150" text="Peso" />
            <TableColumn fx:id="colTipoCarga" prefWidth="150" text="Tipo de Carga" />
            <TableColumn fx:id="colEstado" prefWidth="150" text="Estado" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="UNCONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <effect>
            <DropShadow>
                <color>
                    <Color opacity="0.2" />
                </color>
            </DropShadow>
        </effect>
    </TableView>
</VBox>