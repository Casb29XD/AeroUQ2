        <effect>
            <DropShadow />
        </effect>
    </HBox>

    <!-- Espacio despuÃ©s del tÃ­tulo -->
    <HBox prefHeight="10.0" />

    <!-- Barra de bÃºsqueda -->
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 10;">
        <Label style="-fx-font-weight: bold;" text="Buscar equipaje:" />
        <TextField fx:id="txtBuscar" promptText="Ingrese ID o nombre del pasajero" HBox.hgrow="ALWAYS" />
        <Button fx:id="btnBuscar" onAction="#handleBuscarEquipaje" style="-fx-background-color: #2e8b57; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="ðŸ” Buscar">
