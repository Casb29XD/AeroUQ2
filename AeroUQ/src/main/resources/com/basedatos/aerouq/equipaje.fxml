        </Button>
        <Button fx:id="btnLimpiarBusqueda" onAction="#handleLimpiarBusqueda" style="-fx-background-color: #78a885; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="âŒ Limpiar">
            <padding>
                <Insets bottom="8" left="15" right="15" top="8" />
            </padding>
        </Button>
        <effect>
            <DropShadow>
                <color>
                    <Color opacity="0.2" />
                </color>
            </DropShadow>
        </effect>
    </HBox>

    <!-- Formulario para ingreso de datos -->
    <GridPane alignment="CENTER" hgap="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;" vgap="15">
        <Label style="-fx-font-weight: bold;" text="CÃ³digo de Barras:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="txtCodBarras" promptText="CÃ³digo de Barras" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label style="-fx-font-weight: bold;" text="Peso:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
        <TextField fx:id="txtPeso" promptText="Peso" GridPane.columnIndex="3" GridPane.rowIndex="0" />

        <Label style="-fx-font-weight: bold;" text="ID Vuelo:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="txtIdVuelo" promptText="ID Vuelo" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label style="-fx-font-weight: bold;" text="ID Pasajero:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        <TextField fx:id="txtIdPasajero" promptText="ID Pasajero" GridPane.columnIndex="3" GridPane.rowIndex="1" />

        <Label style="-fx-font-weight: bold;" text="Estado:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="txtEstado" promptText="Estado" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

       <!-- Panel de botones -->
    <HBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15;">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>
        <Button fx:id="btnAdd" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleAddEquipaje" style="-fx-background-color: #3cb371; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Agregar Equipaje âž•">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <effect>
                <DropShadow height="5.0" radius="2.0" width="5.0">
                    <color>
                        <Color opacity="0.3" />
                    </color>
                </DropShadow>
            </effect>
        </Button>
        <Button fx:id="btnEdit" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleEditEquipaje" style="-fx-background-color: #20b2aa; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Editar Equipaje âœ">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <effect>
                <DropShadow height="5.0" radius="2.0" width="5.0">
                    <color>
                        <Color opacity="0.3" />
                    </color>
                </DropShadow>
            </effect>
        </Button>
        <Button fx:id="btnDelete" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" onAction="#handleDeleteEquipaje" style="-fx-background-color: #db5a42; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Eliminar Equipaje âž–">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <effect>
                <DropShadow height="5.0" radius="2.0" width="5.0">
                    <color>
                        <Color opacity="0.3" />
                    </color>
                </DropShadow>
            </effect>
        </Button>
        <effect>
            <DropShadow>
                <color>
                    <Color opacity="0.2" />
                </color>
            </DropShadow>
        </effect>
    </HBox>

    <!-- TableView redimensionable -->
    <TableView fx:id="tableEquipaje" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #a3d2a3;" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colIdMaleta" prefWidth="100" style="-fx-alignment: CENTER;" text="ID Maleta" />
            <TableColumn fx:id="colCodBarras" prefWidth="150" text="CÃ³digo de Barras" />
            <TableColumn fx:id="colPeso" prefWidth="150" text="Peso" />
            <TableColumn fx:id="colIdVuelo" prefWidth="150" text="ID Vuelo" />
            <TableColumn fx:id="colIdPasajero" prefWidth="150" text="ID Pasajero" />
            <TableColumn fx:id="colEstado" prefWidth="150" text="Estado" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="UNCONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <effect>
            <DropShadow>
                <color>
                    <Color opacity="0.2" />
                </color>
            </DropShadow>
        </effect>
    </TableView>
</VBox>
